<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <!-- Imagen de vista principal -->
    <ImageView
        android:id="@+id/imgStop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="108dp"
        android:contentDescription="Imagen de vista"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo" />

    <!-- Bot贸n para grabar -->
    <ImageView
        android:id="@+id/imgGrabar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Bot贸n para grabar"
        app:layout_constraintBottom_toTopOf="@id/imgStop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stop_rec" />

    <!-- Bot贸n para reproducir -->
    <ImageView
        android:id="@+id/imgPlay"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Bot贸n para reproducir"
        app:layout_constraintBottom_toTopOf="@id/imgStop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgGrabar"
        app:srcCompat="@drawable/reproducir" />

</androidx.constraintlayout.widget.ConstraintLayout>









